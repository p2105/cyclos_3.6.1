<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
	
<hibernate-mapping>
	<class dynamic-insert="true" dynamic-update="true" name="nl.strohalm.cyclos.entities.accounts.guarantees.PaymentObligationLog" table="payment_obligation_logs">
    	<cache usage="read-write"/>
        <id name="id" type="long">
        	<column name="id" sql-type="integer" />
            <generator class="native"/>
        </id>

		<property name="date" column="date" type="calendar" not-null="true"/>			
		<property name="status" column="status" length="2" not-null="true">
            <type name="nl.strohalm.cyclos.utils.hibernate.StringValuedEnumType">
                <param name="enumClassName">nl.strohalm.cyclos.entities.accounts.guarantees.PaymentObligation$Status</param>
            </type>
		</property>
		
		<many-to-one name="paymentObligation" class="nl.strohalm.cyclos.entities.accounts.guarantees.PaymentObligation">
		    <column name="payment_obligation_id" not-null="true" sql-type="integer"/>
		</many-to-one>
		
		<many-to-one name="by" class="nl.strohalm.cyclos.entities.members.Element">
		    <column name="by_id" sql-type="integer" not-null="false"/>
		</many-to-one>
	</class>
	
</hibernate-mapping>
